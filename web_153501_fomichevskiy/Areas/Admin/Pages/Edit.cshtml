@using web_153501_fomichevskiy.Areas.Admin.Pages;
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>VideoGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VideoGame.Id" />
            <div class="form-group">
                <label asp-for="VideoGame.Name" class="control-label"></label>
                <input asp-for="VideoGame.Name" class="form-control" />
                <span asp-validation-for="VideoGame.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoGame.Description" class="control-label"></label>
                <input asp-for="VideoGame.Description" class="form-control" />
                <span asp-validation-for="VideoGame.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoGame.CategoryId" class="control-label"></label>
                <select asp-for="VideoGame.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="VideoGame.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoGame.Price" class="control-label"></label>
                <input asp-for="VideoGame.Price" class="form-control" />
                <span asp-validation-for="VideoGame.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" name="Image" type="file" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
